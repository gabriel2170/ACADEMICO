.container {
    display: flex;
    flex-direction: column;
    background-color: #fff;
    box-shadow: 0px 2px 15px #000;
    justify-content: space-between;
    border-radius: 10px;
    margin: 25px;
    text-decoration: none;
    border-radius: 15px;
}

.head {
    height: 15vh;
    border-top-left-radius: 15px;
    border-top-right-radius: 15px;
}

.info {
    padding: 15px;
}

.info .img {
    text-align: center;
    margin-top: -90px;
}

.info .img img {
    width: 160px;
    height: 160px;
}

.infoTitle {
    font-weight: bold;
    font-size: 24px;
    color: #000;
    padding: 10px 0px 5px 0px;
}

.infoItem {
    font-size: 14px;
    font-weight: bold;
    color: #666;
    padding-bottom: 3px;
}

.infoPrice {
    font-weight: bold;
    font-size: 18px;
}