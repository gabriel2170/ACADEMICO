datasource db {
  url      = env("DATABASE_URL")
  provider = "mysql"
}

generator client {
  provider = "prisma-client-js"
}

model Cliente {
  id              Int      @id @default(autoincrement())
  nomeCliente     String   @unique
  cpf             Int      @unique
  rg              Int      @unique
  email           String   @unique
  endereco        String   @unique
  numero          Int      @unique
  bairro          String   @unique
  cidade          String   @unique
  estado          String   @unique
  telefone        Int?      
 }


model Restaurante {
  id                Int         @id @default(autoincrement())
  razao_social      String      @unique 
  nome_fantazia     String?     
  cnpj              Int         @unique
  ie                Int         @unique
  endereco          String      @unique
  numero            Int         @unique
  bairro            String      @unique
  cidade            String      @unique
  proprietario      String      @unique 
  cpf               Int         @unique

}

model User{
  id        Int       @id @default(autoincrement())
  usuario   String    @unique
  Senha     Int       @unique
}

model Carrinho{
  id Int @id @default(autoincrement())
  descricao String  @unique
  quantidade Int    @unique
  preco Int         @unique
  imagem String     @unique
}

model Reifeicao{
  id        Int    @id @default(autoincrement())
  descricao String @unique
  qntd      Int    @unique
  preco     Float  @unique  
  opcionais String?

}

