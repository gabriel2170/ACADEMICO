-colocar (double) entre parenteses dessa forma aplica o casting na equa√ßao
-o casting serve para converter uma equacao ou variavel em um tipo de dado


public class Main {
	public static void main(String[] args){
    
    	int x, y;
        
        y = 12;
        
        x = 2 * y;
        
        System.out.println(y);
        System.out.println(x);
    
    	double b, B, h , area;
        
        b = 6.0;
        B = 8.0;
        h = 5.0;
        
        area = (b + B) / 2.0 * h;
        
        System.out.printf("%.2f%n", area);
        
        int a, c;
        
        double resultado;
        
        a = 5;
        c = 2;
        

        
        resultado = (double) a / c;
        
        int n;
        double v;
        


        v = 5;
        n = (int) v;
        System.out.println(n);
        
    }
}
