//card.jsx

-esse component card , esta sendo usado apenas para conter todo resultado do projeto em um card mostrado no HTML

import './card.css'
import React from 'react'


export default (props)=>{


    const carStyle = {
        backgroundColor: props.color || '#F00',
        boderColor: props.color || '#F00',

    }
    return <div className='Card' style={carStyle}>
            <div className='Title'>{props.titulo}</div>
            <div className='Content'>{props.children}</div>
        </div>
}


-------------------------------------------------------------
//card.css

.Card{
    border-radius: 10px;
    overflow: hidden;
    border: 3px solid;
    margin: 10px;
    display: flex;
    flex-direction: column;
    max-width: 500PX;
    min-width: 500PX;
}

.Card .Title{
    padding: 10px 0;
    display: flex;
    justify-content: center;
}

.Card .Content{
    flex: 1;
    background-color: white;
    color: black;
    padding: 10px;
}

