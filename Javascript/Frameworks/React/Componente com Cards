//App.jsx

-para instroduzir numeros nos parametros dos components use {}
-E repara que como o card vai conter todo o projeto ou seja o component desse projeto, ele Ã© declarado em tag antes da tag do component que vamos armazenar no card
-passamos alguns parametros no card como titulo e color mais para estetica , para reproduzir um titulo do projeto e deixar o card com uma cor

import './App.css'
import React from 'react'
import Primeiro from './primeiro'
import ComParametro from './ComParametro'
import Fragmento from './fragmento'
import Aleatorio from './aleatorio'
import Card from './card'


export default () => (

    <div className='App' >
        
            <Card titulo='Desafio Aleatorio' color="#FA6545">
                <Aleatorio min={1} max={60} />

            </Card>

            <Card titulo='Fragmento' color="#F3FA45">
                <Fragmento />
            </Card>

            <Card titulo='Com Parametro' color='#45FAB5'>
                <ComParametro
                    aluno='Gabriel'
                    nota={9.5}
                    disciplina='matematica'
                />
            </Card>

            <Card titulo='Primeiro Componente' color="#7345FAs">
                <Primeiro />
            </Card>

    </div>
);







