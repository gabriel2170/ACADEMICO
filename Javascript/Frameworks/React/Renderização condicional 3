//Usuarioinfo.jsx

-Podemos utilizar um Else dentro de uma tag igual o If ,para caso ele nao satisfazer a condicao do If ele retorna o que esta na tag Else
-e repara que acima exportamos {Else} do component If 


import React from "react";
import If , {Else} from "./If";

export default props =>{

    const usuario = props.usuario || {}
    return (
        <If test={usuario && usuario.nome}>
            Bem vindo <strong>{usuario.nome}</strong>
            <Else>
                Nao seja bem vindo <strong>Buddy</strong>
            </Else>
        </If>
    )
}
------------------------------------------------------------------------
//If.js


-nos exportamos umas const Else que armazenava apenas os elementos filhos restantes recebidos pelo If , que seria uma forma de armazenar tudo que nao satisfaz o if , e satifaz o else na estrutura de condicao nesse exemplo
-o filter serviu para filtrar entre os elementos ele vai como parametro apenas uma funcao 
-e apos a funcao do filter colocamos no elseChild para ele receber apenas o primeiro valor retornado do filter
-o child.type seria o tipo de elemento child, child.type.name seria o nome do tipo do elemento que esse exemplo esta recebendo Else
-apenas no ifChildren que o filter foi diferente, porque dessa forma ele colocou para filtrar e receber todos os elementos menos os que facem parte da variavel elseChild



export default props =>{
    const elseChild = props.children.filter(child =>{
        return child.type && child.type.name == 'Else'
    })[0]

    const ifChildren = props.children.filter(child =>{
        return child !== elseChild
    })
    
    if(props.test){
        return ifChildren
        
    }else if(elseChild){
        return elseChild
    }else{
        return false 
    }
}

export const Else = props => props.children
------------------------------------------------------------------------
//App.jsx

-voce colocar {} dentro de um {} , {{}} permite que voce declare objetos dentro dos atributos nas tags de components, igual no atributo usuario

import './App.css'
import React from 'react'
import Usuarioinfo from './Usuarioinfo';


export default () => (

    <div className='App' >         
        <Usuarioinfo usuario={{nome: 'fernando'}}/>             
    </div>
);
